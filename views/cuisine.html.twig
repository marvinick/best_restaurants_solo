<html>
<head>
    <title>Cuisine List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href='/'>Restaurants</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <div>
          <form action='/cuisine_results' class="navbar-form navbar-left">
            <div class='form-group'>
              <input id='name' name='name' class='form-control' type='text' placeholder="Enter cuisine name">

              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </form>
        </div>
        <ul class="nav navbar-nav navbar-right">

            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


    <div class="container">
        <h1>{{ cuisine.getName }}</h1>
        <h4><a href="/cuisines/{{ cuisine.getId }}/edit">Edit</a></h4>
        {% if restaurants is not empty %}
            <p>Here are the restaurants:</p>
            <ul>
            {% for restaurant in restaurants %}
                <h4>{{ restaurant.getName }}</h4>
              <ul>
                <li>{{ restaurant.getLocation }}</li>
              </ul>
            {% endfor %}
            </ul>
            <form action='/delete_restaurants' method='post'>
                <button type='submit' class="btn-warning btn-lg">Clear</button>
            </form>
        {% endif %}
        <hr>
        <h4>Add Restaurant</h4>
        <br/>
        <form action='/restaurants' method='post'>
            <input id="cuisine_id" name="cuisine_id" type="hidden" value="{{ cuisine.getId() }}">
            <label for='name'>Restaurant Name</label>
            <input id='name' name='name' type='text'>
            <label for='location'>Location</label>
            <input id='location' name='location' type='text'>
            <br/>
            <br/>
            <button type='submit' class="btn-primary btn-lg">Add restaurant</button>
        </form>
    </div>
</body>
</html>
